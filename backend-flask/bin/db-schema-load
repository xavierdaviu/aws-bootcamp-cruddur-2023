#! /usr/bin/bash

echo "db-schema-load:"

schema_path="$(realpath .)/db/schema.sql"
echo $schema_path

if [ "$1" = "prod" ]; then
   echo "Production environment"
   CON_URL=$PROD_CONNECTION_URL
else
   echo "Not Production environment"
   CON_URL=$CONNECTION_URL
fi

psql $CON_URL cruddur < $schema_path